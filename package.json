{
  "name": "imagezy",
  "version": "1.0.0",
  "description": "Load images on your website, lazily.",
  "main": "dist/imagezy.min.js",
  "engines": {
    "node": ">=4.2.4"
  },
  "scripts": {
    "babelify": "browserify src/imagezy.js -o dist/imagezy.js -t [ babelify --presets [ env ] ]",
    "build:dist": "npm-run-all js:build sass:build",
    "js:build": "npm-run-all -p babelify uglify",
    "prepublish": "npm run build-dist",
    "test": "mocha --reporter spec",
    "uglify": "uglifyjs dist/imagezy.js -c --source-map --output dist/imagezy.min.js ",
    "compile-scss": "node-sass-chokidar --source-map true src/scss/ -o dist/",
    "autoprefixer": "postcss dist/*.css --use autoprefixer -d dist",
    "sass:build": "npm-run-all -p compile-scss autoprefixer",
    "sass:watch": "chokidar 'src/scss/**/*.scss' -c 'npm run sass:build'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreamistlabs/imagezy.git"
  },
  "author": "Johnny Hu <heyitsjhu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dreamistlabs/imagezy/issues"
  },
  "homepage": "https://github.com/dreamistlabs/imagezy#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.4.0",
    "chai": "^4.1.1",
    "chokidar-cli": "^1.2.0",
    "mocha": "^3.5.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "uglify-js": "^3.0.28"
  }
}
